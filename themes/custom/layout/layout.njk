<!DOCTYPE html>
<html lang="{{ config.language }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  {% if is_post() %}
    <title>{{ page.title }} | {{ config.title }}</title>
    <meta name="description" content="{{ truncate(strip_html(page.content), {length: 150}) }}">
  {% elif is_archive() %}
    <title>{{ __('title.archive') }} | {{ config.title }}</title>
  {% elif is_tag() %}
    <title>{{ __('title.tag') }}: {{ page.tag }} | {{ config.title }}</title>
  {% elif is_category() %}
    <title>{{ __('title.category') }}: {{ page.category }} | {{ config.title }}</title>
  {% else %}
    <title>{{ config.title }}{% if config.subtitle %} - {{ config.subtitle }}{% endif %}</title>
    <meta name="description" content="{{ config.description }}">
  {% endif %}
  
  <meta name="keywords" content="{{ config.keywords }}">
  <meta name="author" content="{{ config.author }}">
  
  <!-- Open Graph -->
  <meta property="og:type" content="{% if is_post() %}article{% else %}website{% endif %}">
  <meta property="og:title" content="{% if is_post() %}{{ page.title }}{% else %}{{ config.title }}{% endif %}">
  <meta property="og:url" content="{{ url }}">
  <meta property="og:site_name" content="{{ config.title }}">
  <meta property="og:description" content="{% if is_post() %}{{ truncate(strip_html(page.content), {length: 150}) }}{% else %}{{ config.description }}{% endif %}">
  <meta property="og:locale" content="{{ config.language }}">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="{% if is_post() %}{{ page.title }}{% else %}{{ config.title }}{% endif %}">
  <meta name="twitter:description" content="{% if is_post() %}{{ truncate(strip_html(page.content), {length: 150}) }}{% else %}{{ config.description }}{% endif %}">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ url }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="{{ url_for('/favicon.ico') }}">
  
  <!-- CSS -->
  <link rel="stylesheet" href="{{ url_for('/css/custom.css') }}">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <!-- 顶部导航栏 -->
  <header class="custom-header">
    <div class="custom-logo">
      <div class="custom-logo-icon">CS</div>
      <div class="custom-site-info">
        <h1><a href="{{ url_for('/') }}">{{ config.title }}</a></h1>
        <p>{{ config.subtitle }}</p>
      </div>
    </div>
    
    <nav class="custom-nav">
      <a href="{{ url_for('/') }}" class="custom-nav-item {% if is_home() %}active{% endif %}">首页</a>
      <a href="{{ url_for('/archives') }}" class="custom-nav-item {% if is_archive() %}active{% endif %}">分类</a>
      <a href="{{ url_for('/tags') }}" class="custom-nav-item {% if is_tag() %}active{% endif %}">标签</a>
      <a href="{{ url_for('/about') }}" class="custom-nav-item {% if is_current('/about') %}active{% endif %}">关于</a>
    </nav>
    
    <div class="custom-search-container">
      <input type="text" class="custom-search" placeholder="搜索文章..." id="search-input">
    </div>
  </header>

  <!-- 主要内容区域 -->
  <div class="custom-container">
    <!-- 主内容 -->
    <main class="custom-main">
      {% block content %}{% endblock %}
    </main>

    <!-- 右侧边栏 -->
    <aside class="custom-sidebar">
      <!-- 个人信息卡片 -->
      <div class="custom-widget">
        <h3 class="custom-widget-title">{{ config.author }}</h3>
        <div class="custom-profile">
          <div class="custom-avatar">享</div>
          <h4 class="custom-profile-name">{{ config.author }}</h4>
          <p class="custom-profile-title">{{ config.description }}</p>
          <div class="custom-profile-stats">
            <div class="custom-profile-stat">
              <span class="custom-profile-stat-number">{{ site.posts.length }}</span>
              <span class="custom-profile-stat-label">文章</span>
            </div>
            <div class="custom-profile-stat">
              <span class="custom-profile-stat-number">{{ site.tags.length }}</span>
              <span class="custom-profile-stat-label">标签</span>
            </div>
            <div class="custom-profile-stat">
              <span class="custom-profile-stat-number">{{ site.categories.length }}</span>
              <span class="custom-profile-stat-label">分类</span>
            </div>
          </div>
        </div>
      </div>

      <!-- 热门标签 -->
      {% if site.tags.length > 0 %}
      <div class="custom-widget">
        <h3 class="custom-widget-title">热门标签</h3>
        <div class="custom-popular-tags">
          {% for tag in site.tags.limit(6) %}
            <a href="{{ url_for(tag.path) }}" class="custom-popular-tag {{ tag.name | lower | replace(' ', '') }}">{{ tag.name }}</a>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      <!-- 最新文章 -->
      {% if site.posts.length > 0 %}
      <div class="custom-widget">
        <h3 class="custom-widget-title">最新文章</h3>
        <div class="custom-recent-posts">
          {% for post in site.posts.limit(5) %}
            <div class="custom-recent-post">
              <a href="{{ url_for(post.path) }}" class="custom-recent-post-title">{{ post.title }}</a>
              <div class="custom-recent-post-date">{{ date(post.date, 'MM-DD') }}</div>
            </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      <!-- 社交链接 -->
      <div class="custom-widget">
        <h3 class="custom-widget-title">社交链接</h3>
        <div class="custom-social">
          <a href="#" class="custom-social-link github">GitHub</a>
          <a href="#" class="custom-social-link twitter">Twitter</a>
          <a href="#" class="custom-social-link bilibili">Bilibili</a>
        </div>
      </div>
    </aside>
  </div>

  <!-- 页脚 -->
  <footer class="custom-footer">
    <div class="custom-footer-content">
      <p>&copy; {{ date(Date.now(), 'YYYY') }} {{ config.author }}. Powered by <a href="https://hexo.io/" target="_blank">Hexo</a> | 用代码记录二次元的美好时光</p>
    </div>
  </footer>

  <!-- JavaScript -->
  <script>
    // 搜索功能
    document.getElementById('search-input').addEventListener('input', function(e) {
      const query = e.target.value.toLowerCase();
      // 这里可以添加搜索逻辑
      console.log('搜索:', query);
    });

    // 平滑滚动
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // 页面加载动画
    window.addEventListener('load', function() {
      document.body.classList.add('loaded');
    });
  </script>
</body>
</html>